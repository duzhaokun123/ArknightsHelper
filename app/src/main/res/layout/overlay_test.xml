<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#81D4FA"
        android:orientation="horizontal"
        tools:ignore="HardcodedText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/test_beforeOperation_recognize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test before Operation recognize" />

            <Button
                android:id="@+id/test_beforeOperation_cctr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test before Operation cctr" />

            <Button
                android:id="@+id/test_endOperation_recognize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test end Operation recognize" />

            <Button
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_callback"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textIsSelectable="true" />
    </LinearLayout>
</layout>